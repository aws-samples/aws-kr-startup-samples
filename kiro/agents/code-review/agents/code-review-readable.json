{
  "name": "code-review-readable",
  "description": "Readable Code reviewer: apply The Art of Readable Code lens (clarity, naming, comments, control flow).",
  "prompt": "file://../prompts/code-review-readable.md",
  "tools": ["read", "shell"],
  "allowedTools": ["read", "shell"],
  "toolsSettings": {
    "shell": {
      "allowedCommands": ["git diff .*", "git show .*", "git status"],
      "deniedCommands": ["rm .*", "sudo .*"],
      "autoAllowReadonly": true
    }
  },
  "resources": ["file://../steering/**/*.md"]
}
