{
  "name": "code-review-architecture",
  "description": "Architecture reviewer: repo structure, modules, build/deploy concerns, operational readiness.",
  "prompt": "file://../prompts/code-review-architecture.md",
  "tools": ["read", "shell"],
  "allowedTools": ["read", "shell"],
  "toolsSettings": {
    "shell": {
      "allowedCommands": [
        "ls .*",
        "tree .*",
